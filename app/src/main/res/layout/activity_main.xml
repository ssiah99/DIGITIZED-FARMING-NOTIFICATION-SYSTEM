<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F7"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer Registration"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginTop="50dp"
                android:padding="16dp" />

            <TextView
                android:id="@+id/label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:layout_marginTop="40dp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:backgroundTint="#BDC3C7"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name:"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:backgroundTint="#BDC3C7"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Number:"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter ID Number"
                android:backgroundTint="#BDC3C7"
                android:inputType="number"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone"
                android:backgroundTint="#BDC3C7"
                android:inputType="number"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Age"
                android:backgroundTint="#BDC3C7"
                android:inputType="number"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_farm_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Size (Acres):"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_farm_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Farm Size"
                android:inputType="number"
                android:backgroundTint="#BDC3C7"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="County:"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_county"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDC3C7"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_constituency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Constituency:"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_constituency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDC3C7"
                android:padding="12dp" />

            <TextView
                android:id="@+id/label_ward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ward:"
                android:textColor="#2C3E50"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_ward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDC3C7"
                android:padding="12dp" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="#6750a4"
        app:itemTextColor="#6750a4"
        android:layout_marginTop="20dp"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
